{
  "language_overrides": {
    "JavaScript": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "LaTeX": {
      "soft_wrap": "editor_width"
    }
  },
  "lsp": {
    "clangd": {
      "arguments": ["-background-index", "-compile-commands-dir=Build"]
    }
  }
}
